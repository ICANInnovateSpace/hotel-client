<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:background="#2536ed"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <Button
                android:id="@+id/serach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="查看酒店"/>
            <ImageButton
                android:id="@+id/head"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitStart"
                android:background="@drawable/head"
                android:layout_centerInParent="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_below="@+id/head"
                android:layout_centerHorizontal="true"
                android:id="@+id/textView" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="6">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#c7c5c5">
            <RelativeLayout
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:background="#ffffff"
                android:layout_centerVertical="true">
                    <ImageButton
                        android:id="@+id/personal_pwd"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/pwd"
                        android:layout_centerInParent="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="修改密码"
                        android:textSize="20dp"
                        android:layout_centerInParent="true"
                        android:layout_below="@+id/personal_pwd"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:background="#ffffff"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true">
                <ImageButton
                    android:id="@+id/personal_card"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/card"
                    android:layout_centerInParent="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="绑定银行卡"
                    android:textSize="20dp"
                    android:layout_centerInParent="true"
                    android:layout_below="@id/personal_card"/>
            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="4">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#ffffff">

            <ImageButton
                android:id="@+id/houseinfo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/hotel"
                android:layout_centerInParent="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订房信息"
                android:textSize="20dp"
                android:layout_centerInParent="true"
                android:layout_below="@id/houseinfo"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#c7c5c5">
    </LinearLayout>

</LinearLayout>
